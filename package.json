{
  "name": "@jtart/uni",
  "author": "Jordan Tart <jordan.tart3@gmail.com> (https://github.com/jtart)",
  "description": "Tiny framework offering Universal React using React Router.",
  "version": "0.0.6",
  "license": "MIT",
  "homepage": "https://github.com/jtart/uni",
  "bugs": {
    "url": "https://github.com/jtart/uni/issues",
    "email": "jordan.tart3@gmail.com"
  },
  "scripts": {
    "build": "microbundle --jsx React.createElement",
    "dev": "microbundle watch --jsx React.createElement",
    "dev:wait-for-3000": "wait-on http://localhost:3000 && npm run dev",
    "dev:example-dev-with-local-uni": "concurrently -k -n \"EXAMPLE,UNI\" -c \"red,blue\" \"npm run example:dev-with-local-uni\" \"npm run dev:wait-for-3000\"",
    "example:dev-with-local-uni": "cd example && npm install && npm link ../ && npm run dev",
    "example:prod": "cd example && rm -rf node_modules && npm unlink ../ && npm install --production && npm run build && npm start",
    "prePublishOnly": "npm run build",
    "test": "jest --watch",
    "test:ci": "jest --ci --coverage --coverageReporters=text-lcov | coveralls"
  },
  "dependencies": {
    "react-dom": "^16.4.2",
    "react-helmet": "^5.2.0",
    "react-router-config": "^1.0.0-beta.4",
    "react-router-dom": "^4.3.1"
  },
  "devDependencies": {
    "babel-core": "^6.26.3",
    "babel-jest": "^23.4.2",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "concurrently": "^3.6.1",
    "coveralls": "^3.0.2",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "enzyme-to-json": "^3.3.4",
    "jest": "^23.4.2",
    "microbundle": "^0.6.0",
    "prettier": "^1.14.0",
    "react": "^16.4.2",
    "react-test-renderer": "^16.4.2",
    "regenerator-runtime": "^0.12.1",
    "styled-components": "^3.4.0",
    "wait-on": "^2.1.0"
  },
  "peerDependencies": {
    "react": "^16.4.2",
    "styled-components": "^3.4.0"
  },
  "main": "dist/uni.js",
  "umd:main": "dist/uni.umd.js",
  "module": "dist/uni.es.js",
  "files": [
    "dist/*"
  ]
}
